<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.RegisterController"
           fx:id="registerRoot"
           prefWidth="1440" prefHeight="900">

    <!-- Manor image background (same as home.fxml) -->
    <ImageView fx:id="backgroundImage" fitWidth="1440" fitHeight="900"
               preserveRatio="true" smooth="false">
        <image>
            <Image url="@../images/manor.png" />
        </image>
    </ImageView>

    <!-- Dark overlay for contrast -->
    <Rectangle width="1440" height="900" pickOnBounds="false" mouseTransparent="true"
               style="-fx-fill: rgba(0,0,0,0.0);" />

    <!-- Content -->
    <HBox prefWidth="1440" prefHeight="900">

        <!-- LEFT PANEL -->
        <AnchorPane prefWidth="460" styleClass="left-panel">
            <VBox spacing="16" alignment="BOTTOM_CENTER"
                  AnchorPane.leftAnchor="70.0"
                  AnchorPane.rightAnchor="36.0"
                  AnchorPane.topAnchor="180.0"
                  AnchorPane.bottomAnchor="120.0">
                <TextField fx:id="txt_userId" promptText="USERNAME (5 characters)" styleClass="field"/>
                <PasswordField fx:id="txt_password" promptText="PASSWORD (min 4 chars)" styleClass="field"/>
                <TextField fx:id="txt_fullName" promptText="EMAIL" styleClass="field"/>
                <Label fx:id="lbl_error" text="" visible="false" styleClass="error-label"/>

                <VBox spacing="16" alignment="CENTER">
                    <Button text="REGISTER" onMouseClicked="#btnRegisterClicked" prefWidth="300" styleClass="primary-button"/>
                    <Button text="BACK" onMouseClicked="#back" prefWidth="300" styleClass="secondary-button"/>
                </VBox>
            </VBox>
        </AnchorPane>

        <!-- RIGHT PANEL (optional decorative placeholder) -->
        <StackPane HBox.hgrow="ALWAYS" styleClass="right-panel"/>
    </HBox>
</StackPane>