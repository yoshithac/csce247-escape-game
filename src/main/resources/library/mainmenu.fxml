<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.MainMenuController"
           fx:id="menuRoot"
           prefWidth="1440" prefHeight="900">

    <!-- Manor image background (same as home) -->
    <ImageView fx:id="backgroundImage" fitWidth="1440" fitHeight="900"
               preserveRatio="true" smooth="false">
        <image>
            <Image url="@../images/manor.png" />
        </image>
    </ImageView>

    <!-- dark overlay -->
    <Rectangle width="1440" height="900" pickOnBounds="false" mouseTransparent="true"
               style="-fx-fill: rgba(0,0,0,0.32);" />

    <!-- main content -->
    <HBox prefWidth="1440" prefHeight="900" spacing="0">
        <!-- LEFT: dark column -->
        <AnchorPane prefWidth="460" style="-fx-background-color: #0f1420;">
            <!-- Title band (visual) -->
            <Pane AnchorPane.topAnchor="24.0" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="24.0" prefHeight="92">
                <Rectangle layoutX="0" layoutY="6" width="420" height="72" arcWidth="8" arcHeight="8"
                           style="-fx-fill: rgba(5,12,30,0.92); -fx-stroke: rgba(255,255,255,0.03);"/>
                <Label fx:id="titleLabel" text="WHISPERS OF HOLLOW MANOR"
                       style="-fx-font-family: 'Jersey 10'; -fx-font-size:36px; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 4,0,0,2);"
                       layoutX="18" layoutY="18"/>
            </Pane>

            <!-- Buttons column -->
            <VBox spacing="18" prefWidth="420"
                  AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
                  AnchorPane.topAnchor="140.0" AnchorPane.bottomAnchor="140.0"
                  alignment="TOP_LEFT">
                <Region prefHeight="10"/>

                <Button fx:id="btnNewGame" text="   +   NEW GAME" mnemonicParsing="false"
                        styleClass="menu-button" prefWidth="420" prefHeight="64"/>
                <Button fx:id="btnViewProgress" text="   â±   VIEW PROGRESS" mnemonicParsing="false"
                        styleClass="menu-button" prefWidth="420" prefHeight="64"/>
                <Button fx:id="btnLeaderboard" text="   ðŸ‘¥   LEADERBOARD" mnemonicParsing="false"
                        styleClass="menu-button" prefWidth="420" prefHeight="64"/>
                <Button fx:id="btnCertificates" text="   ðŸ“œ   CERTIFICATES" mnemonicParsing="false"
                        styleClass="menu-button" prefWidth="420" prefHeight="64"/>
                <Button fx:id="btnLogout" text="   â†ª   LOGOUT" mnemonicParsing="false"
                        styleClass="menu-button" prefWidth="420" prefHeight="64"/>

                <Region VBox.vgrow="ALWAYS" />

                <Label fx:id="lblUser" text="Welcome, PLAYER" style="-fx-text-fill: #cfd6ff; -fx-font-size:14px; -fx-padding:8 0 16 6;"/>
            </VBox>
        </AnchorPane>

        <!-- RIGHT: manor illustration area (keeps background showing) -->
        <StackPane HBox.hgrow="ALWAYS" styleClass="right-panel">
            <!-- Decorative panel if desired; background image shows through -->
        </StackPane>
    </HBox>
</StackPane>