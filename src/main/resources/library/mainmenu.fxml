<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.MainMenuController"
           fx:id="menuRoot"
           prefWidth="1440" prefHeight="900">

    <ImageView fx:id="backgroundImage" fitWidth="1440" fitHeight="900"
               preserveRatio="true" smooth="false">
        <image>
            <Image url="@../images/manor.png" />
        </image>
    </ImageView>

    <Rectangle width="1440" height="900" pickOnBounds="false" mouseTransparent="true"
               style="-fx-fill: rgba(0,0,0,0.0);"/>

    <HBox prefWidth="1440" prefHeight="900" spacing="0">
        <AnchorPane prefWidth="460" styleClass="left-panel">
            <VBox spacing="16" alignment="BOTTOM_CENTER"
                  AnchorPane.leftAnchor="70.0"
                  AnchorPane.rightAnchor="36.0"
                  AnchorPane.topAnchor="180.0"
                  AnchorPane.bottomAnchor="120.0">

                <VBox spacing="16" alignment="CENTER">
                    <Button fx:id="newGameButton" text="+ NEW GAME" prefWidth="300" styleClass="menu-button" />
                    <Button fx:id="progressButton" text="VIEW PROGRESS" prefWidth="300" styleClass="menu-button" />
                    <Button fx:id="leaderboardButton" text="LEADERBOARD" prefWidth="300" styleClass="menu-button" />
                    <Button fx:id="certificatesButton" text="CERTIFICATES" prefWidth="300" styleClass="menu-button" />
                    <Button fx:id="logoutButton" text="LOGOUT" prefWidth="300" styleClass="menu-button" />
                </VBox>

                <Label fx:id="lblUser" text="Welcome,"/>
            </VBox>
        </AnchorPane>

        <StackPane HBox.hgrow="ALWAYS"/>
    </HBox>
</StackPane>