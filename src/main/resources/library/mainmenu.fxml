<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.MainMenuController"
           fx:id="menuRoot"
           prefWidth="1440" prefHeight="900">

    <!-- Manor image background (same as home) -->
    <ImageView fx:id="backgroundImage" fitWidth="1440" fitHeight="900"
               preserveRatio="true" smooth="false">
        <image>
            <Image url="@../images/manor.png" />
        </image>
    </ImageView>

    <!-- dark overlay -->
    <Rectangle width="1440" height="900" pickOnBounds="false" mouseTransparent="true"
               style="-fx-fill: rgba(0,0,0,0.0);" />

    <!-- main content -->
    <HBox prefWidth="1440" prefHeight="900" spacing="0">
        <!-- LEFT: dark column -->
        <AnchorPane prefWidth="460" styleClass="left-panel">
        <stylesheets>
    <URL value="@styles.css"/>
</stylesheets>
            <VBox spacing="16" alignment="BOTTOM_CENTER"
                  AnchorPane.leftAnchor="70.0"
                  AnchorPane.rightAnchor="36.0"
                  AnchorPane.topAnchor="180.0"
                  AnchorPane.bottomAnchor="120.0">

                <VBox spacing="16" alignment="CENTER">
                    <Button fx:id="newGameButton" text="+ NEW GAME" onMouseClicked="" prefWidth="300" styleClass="button"/>
                    <Button fx:id="progressButton" text="VIEW PROGRESS" onMouseClicked="" prefWidth="300" styleClass="button"/>
                    <Button fx:id="leaderboardButton" text="LEADERBOARD" onMouseClicked="" prefWidth="300" styleClass="button"/>
                    <Button fx:id="certificatesButton" text="CERTIFICATES" onMouseClicked="" prefWidth="300" styleClass="button"/>
                    <Button fx:id="logoutButton" text="LOGOUT" onMouseClicked="" prefWidth="300" styleClass="button"/>
                </VBox>

                <Label fx:id="lblUser" text="Welcome, PLAYER" style="-fx-text-fill: #cfd6ff; -fx-font-size:14px; -fx-padding:8 0 16 6;"/>
            </VBox>
        </AnchorPane>

        <!-- RIGHT: manor illustration area (keeps background showing) -->
        <StackPane HBox.hgrow="ALWAYS" styleClass="right-panel">
            <!-- Decorative panel if desired; background image shows through -->
        </StackPane>
    </HBox>
</StackPane>