<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.DifficultyController"
           fx:id="difficultyRoot"
           prefWidth="1440" prefHeight="900">
           
    <ImageView fitWidth="1440" fitHeight="900" preserveRatio="true" smooth="false">
        <image>
            <Image url="@../images/manor.png" />
        </image>
    </ImageView>

    <Rectangle width="1440" height="900" pickOnBounds="false" mouseTransparent="true"
               style="-fx-fill: rgba(0,0,0,0.0);" />

    <HBox prefWidth="1440" prefHeight="900">
        <AnchorPane prefWidth="460" styleClass="left-panel">
            <VBox spacing="16" alignment="BOTTOM_CENTER"
                  AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="20.0"
                  AnchorPane.topAnchor="160.0" AnchorPane.bottomAnchor="120.0">

                <Button fx:id="easyButton" text="EASY" onAction="#onEasy"
                        styleClass="menu-button" prefWidth="300" maxWidth="300"/>
                <Button fx:id="mediumButton" text="MEDIUM" onAction="#onMedium"
                        styleClass="menu-button" prefWidth="300" maxWidth="300"/>
                <Button fx:id="hardButton" text="HARD" onAction="#onHard"
                        styleClass="menu-button" prefWidth="300" maxWidth="300" />
                    <Button text="BACK" onAction="#back" prefWidth="300" />
            </VBox>

        </AnchorPane>
    </HBox>
</StackPane>