<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.LoginController"
           prefWidth="1280" prefHeight="720" styleClass="login-root">

    <HBox prefWidth="1280" prefHeight="720">
        <AnchorPane prefWidth="460" styleClass="left-panel">
            <VBox spacing="16" alignment="CENTER"
                  AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
                  AnchorPane.topAnchor="160.0" AnchorPane.bottomAnchor="160.0">
                <Label text="LOGIN" style="-fx-font-size:20px; -fx-text-fill: white;"/>

                <TextField fx:id="txt_username" promptText="Username" prefWidth="320" />
                <!-- Use PasswordField to match the controller -->
                <PasswordField fx:id="txt_password" promptText="Password" prefWidth="320" />

                <!-- Error label that the controller expects -->
                <Label fx:id="lbl_error" text="" visible="false" wrapText="true" maxWidth="320" style="-fx-text-fill: #ff6666;"/>

                <VBox spacing="10" alignment="CENTER">
                    <Button text="LOGIN" onAction="#onLogin" prefWidth="220" />
                    <Button text="REGISTER" onAction="#onRegister" prefWidth="220" />
                    <Button text="BACK" onAction="#back" prefWidth="220" />
                </VBox>
            </VBox>
        </AnchorPane>

        <StackPane HBox.hgrow="ALWAYS" styleClass="right-panel"/>
    </HBox>
</StackPane>