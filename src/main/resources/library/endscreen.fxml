<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.EndScreenController"
           fx:id="endRoot"
           prefWidth="1440" prefHeight="900">

    <ImageView fitWidth="1440" fitHeight="900" preserveRatio="true" smooth="false">
        <image>
            <Image url="@../images/endscreen.png" />
        </image>
    </ImageView>

    <Rectangle width="1440" height="900" pickOnBounds="false" mouseTransparent="true"
               style="-fx-fill: rgba(0,0,0,0.0);" />

    <VBox alignment="CENTER" spacing="20" prefWidth="1440" prefHeight="900" translateY="270">
        <Button fx:id="endButton"
                text="RETURN TO MAIN MENU"
                onAction="#onEnd"
                wrapText="true"
                prefWidth="250"
                maxWidth="250"
                style="-fx-font-size: 36px;"
                styleClass="navigate-button"
                textAlignment="CENTER"/>
    </VBox>

</StackPane>
