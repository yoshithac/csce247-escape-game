<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.EndScreenController"
           fx:id="endRoot"
           prefWidth="1440" prefHeight="900">


    <ImageView fitWidth="1440" fitHeight="900" preserveRatio="true" smooth="false">
        <image>
            <Image url="@../images/endscreen.png" />
        </image>
    </ImageView>

    <Rectangle width="1440" height="900" pickOnBounds="false" mouseTransparent="true"
               style="-fx-fill: rgba(0,0,0,0.0);" />

    <HBox prefWidth="1440" prefHeight="900">
        <AnchorPane prefWidth="1440">
            <VBox spacing="16" alignment="BOTTOM_CENTER"
                  AnchorPane.leftAnchor="70.0" AnchorPane.rightAnchor="20.0"
                  AnchorPane.topAnchor="160.0" AnchorPane.bottomAnchor="120.0">

                <Button fx:id="endButton" text="RETURN" onAction="#onEnd"
                 prefWidth="300" maxWidth="300" style="-fx-font-size: 48px;" styleClass="navigate-button"/>
            </VBox>
        </AnchorPane>
    </HBox>
</StackPane>