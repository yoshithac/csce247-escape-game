<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.escapegame.AnagramPuzzleController"
           fx:id="rootPane"
           prefWidth="1440" prefHeight="900">

    <ImageView fx:id="backgroundImage"
               preserveRatio="false" smooth="true">
        <image>
            <Image url="file:/mnt/data/Screenshot 2025-11-19 221015.png" />
        </image>
    </ImageView>

    <BorderPane prefWidth="1200" prefHeight="800">
        <center>
            <VBox alignment="CENTER" spacing="25" maxWidth="1000"
                  style="-fx-padding: 20 36 20 36;">
                <Label text="ANAGRAM PUZZLE"
                       style="-fx-font-family: 'Jersey 10'; -fx-font-size: 40px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="categoryLabel" text="Category: Health"
                       style="-fx-font-family: 'Jersey 10'; -fx-font-size: 32px; -fx-text-fill: #d3e6ff;"/>
                <Label fx:id="promptLabel"
                       text="Prompt"
                       wrapText="true" textAlignment="CENTER"
                       style="-fx-font-family: 'Jersey 10'; -fx-font-size: 32px; -fx-text-fill: #e6f1ff; -fx-padding: 10 0 20 0;"/>

                <TextField fx:id="answerField" promptText="Type your answer..."
                           prefWidth="850" prefHeight="60"
                           style="-fx-background-color: rgba(255,255,255,0.08); -fx-text-fill: white; -fx-font-family: 'Jersey 10'; -fx-font-size: 32px; -fx-prompt-text-fill: #9fb0c8; -fx-border-color: rgba(255,255,255,0.1); -fx-border-width: 2; -fx-background-radius: 8;"/>

                <HBox spacing="16" alignment="CENTER">
                    <Button fx:id="btnSubmit" text="Submit" onAction="#onSubmit"
                            prefWidth="150" prefHeight="60"
                            styleClass="menu-btn"/>
                    <Button fx:id="btnHint" text="Hint" onAction="#onHint"
                            prefWidth="150" prefHeight="60"
                            styleClass="menu-btn"/>
                    <Button fx:id="btnSave" text="Save" onAction="#onSave"
                            prefWidth="150" prefHeight="60"
                            styleClass="menu-btn"/>
                    <Button fx:id="btnQuit" text="Quit" onAction="#onQuit"
                            prefWidth="150" prefHeight="60"
                            styleClass="menu-btn"/>
                </HBox>

                <VBox alignment="CENTER" spacing="12">
                    <Label fx:id="hintsLabel" text="3 hint(s) available"
                           style="-fx-font-family: 'Jersey 10'; -fx-font-size: 32px; -fx-text-fill: #b3caff;"/>
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Attempts:" style="-fx-font-family: 'Jersey 10'; -fx-font-size: 32px; -fx-text-fill: #b3caff;"/>
                        <HBox fx:id="heartsBox" spacing="8" alignment="CENTER"/>
                    </HBox>
                </VBox>

                <Label fx:id="statusLabel"
                       style="-fx-font-family: 'Jersey 10'; -fx-font-size: 32px; -fx-text-fill: white; -fx-padding: 16 0 0 0;"/>
            </VBox>
        </center>
    </BorderPane>
</StackPane>
