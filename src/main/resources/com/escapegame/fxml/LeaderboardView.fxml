<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- 
    LeaderboardView.fxml - Leaderboard Display
    Loads into RIGHT PANEL of GameContainerView
    Transparent background to show background_frame.png behind
-->

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.escapegame.controller.LeaderboardController"
      alignment="TOP_CENTER"
      spacing="12"
      style="-fx-background-color: transparent;">

    <padding>
        <Insets top="10" right="15" bottom="10" left="15"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER" spacing="10" styleClass="leaderboard-header">
        <Label text="ðŸ†" style="-fx-font-size: 36px;"/>
        <Label text="LEADERBOARD" styleClass="leaderboard-title"/>
        <Label text="ðŸ†" style="-fx-font-size: 36px;"/>
    </HBox>

    <!-- Your Rank -->
    <HBox alignment="CENTER" styleClass="your-rank-box">
        <padding>
            <Insets top="10" right="25" bottom="10" left="25"/>
        </padding>
        <Label text="Your Rank: " styleClass="your-rank-label"/>
        <Label fx:id="yourRankLabel" text="#-" styleClass="your-rank-value"/>
    </HBox>

    <!-- Leaderboard Table -->
    <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="10" right="15" bottom="15" left="15"/>
        </padding>
        
        <TableView fx:id="leaderboardTable" 
                   VBox.vgrow="ALWAYS"
                   styleClass="leaderboard-table">
            
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            
            <columns>
                <TableColumn fx:id="rankColumn" 
                             text="Rank" 
                             minWidth="60"/>
                
                <TableColumn fx:id="nameColumn" 
                             text="Player" 
                             minWidth="150"/>
                
                <TableColumn fx:id="scoreColumn" 
                             text="Score" 
                             minWidth="80"/>
                
                <TableColumn fx:id="puzzlesColumn" 
                             text="Puzzles" 
                             minWidth="70"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
